{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:promise/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-console": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
